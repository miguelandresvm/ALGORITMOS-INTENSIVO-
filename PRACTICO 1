float cambiobase_Dec(float b,int p)
{int j=0,r,a,s=0;
while (p > 0)
{r = p % 10;
p = p/10;
a = r*pow(b,j);
s = s+a;
j++;
}
return (s);
}
int eliminar_pares (int p)
{int d,imp = 0;
while(p > 0)
{d = p%10;
 p = p/10;
if(d%2 != 0)
 imp = imp *10 + d;
}
return (imp);}
int invertir(int p)
{int r,inv;
inv = 0;
while (p>0)
{r = p %10;
 p = p/10;
 inv = inv *10 + r;
}
return (inv);
